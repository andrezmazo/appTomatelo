

    <article class="contRegistrar" id="contRegistrar">
        <form action="" method="post">
            <label class="tituloRegister" for="registrarse"
              >Crea tu Cuenta</label
            >
            <p>
              <input
                class="barraInput"
                type="text"
                name="nameSend"
                id="name"
                minlength=" 2"
                placeholder="Nombre y Apellido"
              />
            </p>
            <p>
              <input
                class="barraInput"
                type="text"
                name="userNameSend"
                id="userName"
                minlength=" 2"
                placeholder="Nombre de Usuario"
              />
            </p>
            <p>
              <input
                class="barraInput"
                type="email"
                name="emailSend"
                id="email"
                minlength=" 2"
                placeholder="Correo Electronico"
              />
            </p>
            <div>
              <label class="tituloRegister" for="dateB"
                >Fecha de nacimiento</label
              >

              <input
                class="barraInput"
                type="date"
                name="dateBSend"
                id="dateB"
                minlength=" 2"
              />
            </div>
            <p>
              <label for="domicilio"></label>
              <input
                class="barraInput"
                type="text"
                name="domicilioSend"
                id="domicilio"
                minlength=" 2"
                placeholder="Domicilio"
              />
            </p>

            <p class="tituloRegister" for="autorizacion">
              Autorización de contenido
            </p>

            <div style="width: 80%">
              <input type="checkbox" name="autorizacion" id="autorizacionId" />
              <label
                class="textoPequeno"
                for="autorizacion "
                style="flex-wrap: wrap"
              >
                ¿Deseas recibir contenido de promociones y novedades de nuestra
                tienda?</label
              >
            </div>
            <p class="tituloRegister" for="fotoDeUsuario">Foto de usuario</p>

            <input class="barraInput" type="file" src="" alt="Enviar" />

            <p>
              <input
                class="barraInput"
                type="password"
                name="contrasenaSend"
                id="contrasena"
                minlength=" 2"
                placeholder="Contraseña"
              />
            </p>
            <p>
              <input
                class="barraInput"
                type="password"
                name="confirmarContrasenaSend"
                id="confirmarContrasena"
                minlength=" 2"
                placeholder="Confirmar Contraseña"
              />
            </p>

            <button class="enviarLogin" type="submit">
              <a style="color: white; text-decoration: none" href="/">Enviar</a>
            </button>

            <button class="enviarLogin" type="reset">Borrar Datos</button>
          </form>
    </article>